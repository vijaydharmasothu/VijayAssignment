@model ContactManagement.Models.Contact

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
</head>
<body>

<h4>Contact</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" method="post">

            <div asp-validation-summary="ModelOnly">
                <span style="color:red;">* All fields are Mandatory</span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin:10px">
                @Html.HiddenFor(model => model.ContactId)
                <label class="control-label"> FisrtName</label>
                @Html.TextBoxFor(model => model.FisrtName)
                <span asp-validation-for="FisrtName" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin:10px">
                <label class="control-label">Last Name</label>
                @Html.TextBoxFor(model => model.LattName)
                <span asp-validation-for="LattName" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin:10px">
                <label class="control-label">Email</label>
                @Html.TextBoxFor(model => model.Email)
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin:10px">
                <label class="control-label">Phone Number</label>
                @Html.TextBoxFor(model => model.PhoneNumber)
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin:10px">
                <label class="control-label">Status</label>
                @Html.TextBoxFor(model => model.Status)
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin:40px">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

</body>
</html>
